<% if (success) { %>
<div
  class="mt-3 bg-[#0a0a0a] text-gray-300 border border-green-500 rounded-lg px-6 py-4 w-full max-w-xl mx-auto relative"
>
  <%= success %>
  <button
    onclick="this.parentElement.style.display='none'"
    class="absolute top-2 right-3 text-gray-400 hover:text-white text-xl font-bold focus:outline-none"
    aria-label="Close"
  >
    &times;
  </button>
</div>
<% } %> <% if (error) { %> Hello
<div
  class="mt-3 bg-[#0a0a0a] text-gray-300 border border-red-500 rounded-lg px-6 py-4 w-full max-w-xl mx-auto relative"
>
  <%= error %>
  <button
    onclick="this.parentElement.style.display='none'"
    class="absolute top-2 right-3 text-gray-400 hover:text-white text-xl font-bold focus:outline-none"
    aria-label="Close"
  >
    &times;
  </button>
</div>
<% } %>
