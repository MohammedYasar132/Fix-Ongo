<form
  aria-label="Contact form"
  class="bg-white rounded-lg shadow-lg p-8 w-full max-w-md flex flex-col gap-4"
  action="/submit-main-form"
  id="contact-form"
  method="POST"
>
  <% if (success && success.length) { %>
  <div class="flash-message text-orange-500"><%= success %></div>
  <% } %> <% if (error && error.length) { %>
  <div class="flash-message text-red-500"><%= error %></div>
  <% } %>
