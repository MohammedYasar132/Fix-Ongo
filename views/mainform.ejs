    <input
      class="border border-gray-300 rounded-md px-3 py-2 text-gray-600 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-[#f15a24]"
      placeholder="Phone no."
      required
      name="phone"
      type="tel"
    />
    <input
      class="border border-gray-300 rounded-md px-3 py-2 text-gray-600 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-[#f15a24]"
      placeholder="Enter Email"
      name="email"
      required
      type="email"
    />
    <select
      class="w-full max-w-xs border border-gray-300 rounded-md px-3 py-2 text-gray-600 focus:outline-none focus:ring-2 focus:ring-[#f15a24] overflow-hidden"
      required
      name="device"
